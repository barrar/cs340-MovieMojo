extends master.pug
block title
    | Add Movie
block content
    h2 Add Movie
    form.narrow(method='POST' action='/addMovie')
        div.relative
            input.form-control(type='text' name='movieName' autocomplete='off' required)
            span.placeholderLabel Movie Name
        div.relative
            input.form-control.date(type='text' name='releaseDate' autocomplete='off' required)
            span.placeholderLabel Release Date (MM/DD/YYYY)
        button.btn.btn-primary(type='submit') Submit
        script.
            var cleave = new Cleave('.date', {
                date: true,
                delimiter: '/',
                datePattern: ['m', 'd', 'Y']
            });