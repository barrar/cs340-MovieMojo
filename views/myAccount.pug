extends master.pug
block title
    | Movie List
block content
    h1= 'My Account'
    h4 Watched Movies
    ul(class='verticalListSectioned')
        li
            a(href='/movie/'+movieList[0].movieID) #{movieList[0].name} - Released on #{movieList[0].releaseDate}
            button.btn-primary.btn.btnDelete(onclick="divStatus=document.getElementById('status');divStatus.innerHTML='Added as watched';divStatus.style.color='#f00';setTimeout(function(){divStatus.style.color='#fff';},1000);") Delete
