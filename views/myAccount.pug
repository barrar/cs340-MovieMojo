        form.narrow(method='POST' action='/myAccount')
            input.form-control(type='password' name='oldPassword' placeholder='Old Password' autocomplete='off' required)
            input.form-control(type='password' name='password' placeholder='New Password' autocomplete='off' required)
            input.form-control(type='password' name='confirmPassword' placeholder='Confirm Password' autocomplete='off' required)
            button.btn.btn-primary(type='submit') Change Password
