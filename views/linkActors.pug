extends master.pug
block title
    | Add Actor
block content
    h2 Add Actors to a Movie
    div Make sure you select the correct movie or actor by verifying the name and date
    form.narrow(method='POST' action='/linkActors')
          div.form-group
            label(for='movieName') Movie:
            input#email.form-control(type='text', name='movieName' placeholder='As you type, movies + release dates will appear' autocomplete='off' required)
          div.form-group
            label(for='actorName') Actors:
            input#pw.form-control(type='text' name='actorName' placeholder='As you type, actors + birthdays will appear' autocomplete='off' required)
          button.btn.btn-primary(type='submit') Add actor to movie
