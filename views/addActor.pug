extends master.pug
block title
    | Add Actor
block content
    h2 Add Actor
    form.narrow(method='POST' action='/addActor')
        div.relative
            input.form-control(type='text' name='actorName' autocomplete='off' required)
            span.placeholderLabel Actor Name
        div.relative
            input.form-control.date(type='text' name='birthday' autocomplete='off' required)
            span.placeholderLabel Birthday (M/D/YYYY)
        button.btn.btn-primary(type='submit') Submit
        script.
            var cleave = new Cleave('.date', {
                date: true,
                delimiter: '/',
                datePattern: ['m', 'd', 'Y']
            });
